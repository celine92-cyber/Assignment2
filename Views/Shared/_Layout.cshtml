<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <!-- add css style link -->
    <link href="~/css/main.css" rel="stylesheet" />
    <!-- add icon link -->
    <link rel="icon" href="img/web_icon.jpg">
</head>

<body>
    <!-- Personal Info -->
    <header>
        <h1>@ViewBag.Title</h1>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Hw2" asp-action="Index"> HW2 </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Hw2" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Hw2" asp-action="Calculator">Calculator</a>
                            </li>
                        </ul>
                    </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <p></p><p></p>
    <footer>What's the best thing about being young?</footer>
    <footer>The certainty that the best is yet to come.</footer>

    <script src="~/node_modules/jquery/dist/jquery.min.js"></script>
    <script src="~/js/calculator.js"></script>
</body>
</html>
